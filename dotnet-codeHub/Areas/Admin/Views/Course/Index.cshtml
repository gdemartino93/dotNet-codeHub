@model List<Course>
@if (Model.Count > 0)
{

    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient ml-0">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="py-2">Lista corsi</h2>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row pb-3">
                <div class="col-6">
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="Course" asp-action="Upsert" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i>  Aggiungi Corso
                    </a>
                </div>
            </div>

            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th class="col">
                            Titolo
                        </th>
                        <th class="col">
                            Descrizione
                        </th>
                        <th class="col">
                            Prezzo
                        </th>
                        <th class="col">
                            Data di Creazione
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.OrderBy(u => u.Id))
                    {
                        <tr class="table-Course align-middle">
                            <td style="word-wrap:anywhere" >@obj.Title</td>
                            <td>
                                @obj.Description
                            </td>
                            <td>
                                @obj.Price &euro;
                            </td>
                            <td>
                                @obj.CreatedAt;
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-controller="Course" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil-square"></i> Modifica
                                    </a>
                                    <a asp-controller="Course" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash-fill"></i> Cancella
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>





        </div>
    </div>
}
else
{
    <div class="col-12 text-end">
        <a asp-controller="Course" asp-action="Create" class="btn btn-primary my-2">
            <i class="bi bi-plus-circle"></i>  Aggiungi Corso
        </a>
    </div>
    <div class="categorie-vuote">

        <h2>Nessuna Corso presente</h2>
    </div>
}


