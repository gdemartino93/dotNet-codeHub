@model List<Course>
@if (Model.Count > 0)
{

    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient ml-0">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="py-2">Lista corsi</h2>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row pb-3">
                <div class="col-6">
                </div>
                <div class="col-12 text-end">
                    <a asp-controller="Course" asp-action="Upsert" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i>  Aggiungi Corso
                    </a>
                </div>
            </div>

            <table class="table table-bordered table-striped" id="tblData">
                <thead>
                    <tr>
                        <th>
                            Titolo
                        </th>
                        <th>
                            Descrizione
                        </th>
                        <th>
                            Prezzo
                        </th>
                        <th>
                            Linguaggio
                        </th>
                        <th>
                           
                        </th>
                    </tr>
                </thead>           
            </table>
        </div>
    </div>
}
else
{
    <div class="col-12 text-end">
        <a asp-controller="Course" asp-action="Create" class="btn btn-primary my-2">
            <i class="bi bi-plus-circle"></i>  Aggiungi Corso
        </a>
    </div>
    <div class="categorie-vuote">

        <h2>Nessuna Corso presente</h2>
    </div>
}
@section Scripts{
<script src="~/js/course.js"></script>
}

