@model Course
<div class="card shadow border-0">
    <div class="card-header bg-primary bg-gradient ml-0">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 text-white">Aggiungi corso</h2>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form method="POST">
            <div class="border p-3">
                <span asp-validation-summary="All"></span>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" class="form-control border-0 shadow px-3" />
                    <label asp-for="Title" class="ms-2"></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" class="form-control border-0 px-3 shadow" />
                    <label asp-for="Description" class="ms-2"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Text" class="form-control border-0 px-3 shadow" />
                    <label asp-for="Text" class="ms-2"></label>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Level" class="form-control border-0 px-3 shadow" />
                    <label asp-for="Level" class="ms-2"></label>
                    <span asp-validation-for="Level" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" class="form-control border-0 px-3 shadow" />
                    <label asp-for="Price" class="ms-2"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
  @*                  <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-select border-0 px-3 shadow">*@
                    <select asp-for="CategoryId" asp-items="@(ViewData["CategoryList"] as IEnumerable<SelectListItem>)" class="form-select border-0 px-3 shadow">
                        <option selected disabled> Seleziona una categoria</option>
                    </select>
                     
                 
                    <label asp-for="CategoryId" class="ms-2"></label>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button asp-controller="Course" asp-action="Create" class="btn btn-primary form-control">Aggiungi</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Course" asp-action="Index" class="btn btn-secondary border  form-control">
                            Torna ai corsi
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}