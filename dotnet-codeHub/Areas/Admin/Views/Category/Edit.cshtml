@model Category
<div class="card shadow border-0">
    <div class="card-header bg-primary bg-gradient ml-0">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 text-white">Modifica categoria</h2>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form method="POST">
            <input asp-for="Id" hidden />
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow px-3" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" class="form-control border-0 px-3 shadow" />
                    <label asp-for="DisplayOrder" class="ms-2"></label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Modifica</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border  form-control">
                            Torna alle categorie
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}