@model List<Category>

<div class="container">
    <div class="text-end">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Aggiungi nuova</a>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Display Order</th>
            </tr>
        </thead>
        <tbody class="myTableHome">
            @foreach (var category in Model)
            {
                <tr>
                    <th scope="row">@category.Id</th>
                    <td class="fw-bold">@category.Name</td>
                    <td>@category.DisplayOrder</td>
                </tr>
            }
        </tbody>
    </table>
</div>